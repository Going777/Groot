<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".view.community.CommunityPostFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/main"
            app:cardCornerRadius="40dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:src="@drawable/ic_back"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_post"
                app:tint="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자유"
                android:textColor="@color/grey"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="글 작성하기"
        android:textColor="@color/main"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            card_view:cardBackgroundColor="#E9F3ED"
            card_view:cardElevation="0dp"
            card_view:cardCornerRadius="7dp">
            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="제목을 입력해주세요"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:inputType="text"
                android:background="#E9F3ED"
                android:maxLength="30"/>
            <!--        app:layout_constraintEnd_toEndOf="parent"-->
            <!--        app:layout_constraintStart_toStartOf="parent"-->
            <!--        app:layout_constraintTop_toTopOf="parent" />-->
            <TextView
                android:id="@+id/titleCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="8dp"
                android:hint=" / 30" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="0"
            android:layout_marginTop="12dp"
            card_view:cardBackgroundColor="#E9F3ED"
            card_view:cardElevation="0dp"
            card_view:cardCornerRadius="7dp">
            <ImageButton
                android:id="@+id/imageInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_camera"
                android:background="#E9F3ED"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="0"
        android:layout_marginTop="12dp"
        card_view:cardBackgroundColor="#E9F3ED"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="7dp">
        <EditText
            android:id="@+id/contentInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="내용을 입력해주세요"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            android:inputType="text"
            android:maxLength="1500"
            android:gravity="top"
            android:background="#E9F3ED"/>
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent" />-->
        <TextView
            android:id="@+id/contentCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="8dp"
            android:hint=" / 1500" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="70dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:src="@drawable/ic_hashtag" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tagInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:outlineProvider="none"
                android:text="태그 입력" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/main">
        <Button
            android:id="@+id/toPostListBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="등록" />
    </androidx.cardview.widget.CardView>

</LinearLayout>